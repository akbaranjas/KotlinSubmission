<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerDetailActivity">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
            <ProgressBar
                    android:id="@+id/progress_bar_player_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/player_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorSecondaryText"
                                android:text="@string/str_weight_kg"/>

                        <TextView
                                android:id="@+id/txt_player_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:textSize="32sp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorDark"/>

                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorSecondaryText"
                                android:text="@string/str_height_m"/>

                        <TextView
                                android:id="@+id/txt_player_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:textSize="32sp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorDark"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/player_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorDark"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
                <View android:background="#e0e0e0"
                      android:layout_width = "match_parent"
                      android:padding="10dp"
                      android:layout_height="3dp"/>
                <TextView
                        android:id="@+id/player_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>